

<link rel="stylesheet" href="/css/login.css">

<title>Sign-Up</title>

<div class="main">

    <!--div container containing the logo and other all things-->
    <div class="sign-in">
    
        <!--div contain the logo and heading-->
        <div class="logo flexing-col" >
            <img src="/images/logoo.png" alt="Logo Of The Website">  
            <p>A place to share knowledge and better understand the world</p> 
        </div>

        <!--div containg the login form-->
        <div class="sign-in-form">

            <p>Sign-Up</p>
           
            <!--form-->
            <form  method="post" action="/users/createuser">

              <ul>

                <li>
                    <label>Name:</label><br>
                      <input placeholder="Your Name" type="name"  name="name" required>
                    </li>

                <li>
                  <label>Email:</label><br>
                    <input  placeholder="Your Email" type="email"  name="email" required>
                  </li>

                   <li>
                     <label >Password:</label><br>
                      <input  placeholder="Your Password" type="password"  name="password" required>
                   </li>

                   <li>
                       <button class="button-24" type="submit">Sign Up</button>
                   </li> 

              </ul>

            </form>

            
           <div class="or flex">
            <div class="left"></div>
            <div class="text">or</div>
            <div class="right"></div>
        </div>

           <!--button for sign in with google-->
           <a href="/users/auth/google"> <button class="goggle flex"><img src="/images/logo-google.png">Sign-Up Using Google</button></a>
           
             <!--div to create an account-->
           <div class="create">
             <p>Already have an account?&nbsp<a href="/users/sign_in">Sign In</a> </p>
           </div>


        </div>
   
 </div>  

 </div>
