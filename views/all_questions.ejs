<link rel="stylesheet" href="/css/all_questions.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
  $(document).ready(function(){
    $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#myTable .pu").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });


  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<div class="container">    
  <div class="searchInputWrapper">
    <input id="myInput" class="searchInput" type="text" placeholder='Search your question here'>
    <i class="searchInputIcon fa fa-search"></i>
    </input>
  </div>
</div>
<div class="all-question-container">

  <div id="myTable" class="all-questions">

     <!--Search filter-->

    
    

      <%for(i of allquestions){%>
    <div  class="questions pu">

      <div class="profile">

        <div class="profile-image">
         <img src="/images/profile-image.png">
          
        </div>

        <div class="profile-name">
<p ><%=i.user.name%></p>
    </div>

      </div>

      <div  class="question-content"  >
        <p ><%=i.question%>â€‹</p>
      </div>
     <%if(locals.user.id==i.user.id){%>
      <div class="answer-button">
        <button ><a href="/answer/show_answer/<%=i.id%>">ANSWER</a></button>
        <a href="/question/delete-question/<%=i.id%>" class="delete-icon"><i class="fas fa-trash-alt"></i></a>
      
        
      </div>
     <%}else{%>
      <div class="answer-button">
        <button ><a href="/answer/show_answer/<%=i.id%>">ANSWER</a></button>
      
      </div>
      <%}%>


    </div>
    <%}%>

    

    

    
  </div>


</div>

</div>





